{
  "name": "drive247-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:booking": "turbo run dev --filter=booking",
    "dev:portal": "turbo run dev --filter=portal",
    "dev:web": "turbo run dev --filter=web",
    "dev:admin": "turbo run dev --filter=admin",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "update-branding": "node scripts/bulk-update-branding.js",
    "update-cms": "node scripts/update-cms-content.js"
  },
  "devDependencies": {
    "turbo": "^2.6.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.87.3",
    "dotenv": "^16.3.1"
  }
}
